<h3><%= t('page_name.user_edit_page')%></h3>
<h3> <%= @error_messgae%></h3>

<%= simple_form_for @user , url: "/admin/users/#{@user.id}"  do |form| %>
 
    <%= form.input :user_name %>
    <%= form.input :email %>
    <%= form.input :password %>
    <% if current_user.admin? %>
      <%= form.input :admin ,as: :radio_buttons , 
      collection:[[t('types.admin.add'),true],[t('types.admin.minus'),false]]%>
    <% end %>
    
    <%= form.submit %>

<%end%>
<br>
<%= link_to t('back.admin'), admin_root_path %>