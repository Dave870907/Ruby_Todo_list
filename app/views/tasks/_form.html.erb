
<%# status 跟 order 之後要用 css 做成 inline %>
<%= simple_form_for(task) do |f| %>
  <%= f.input :title, label: t('task.title') %>
  
  <%= f.label :start_time, t('task.start_time')%>
  <%= f.datetime_select :start_time%> <br/><br/>

  <%= f.label :end_time, t('task.end_time')%>
  <%= f.datetime_select :end_time%> <br/><br/>

  <%= f.input :status ,label: t('task.status') ,as: :radio_buttons ,
        collection:[[t('task.status_type')[0],0],[t('task.status_type')[1],1],[t('task.status_type')[2],2]] ,
        :checked => [t('task.status_type')[0],0]%>

  <%= f.input :content,label: t('task.content') %>

  <%= f.input :order, label: t('task.order') ,as: :radio_buttons ,
        collection:[[t('task.order_type')[0],0],[t('task.order_type')[1],1],[t('task.order_type')[2],2]] ,
        :checked => [t('task.order_type')[0],0]%>

  <%= f.input :category,label: t('task.category') %>
  
  <%= f.input :user_id, label: t('task.user_id') %>
  

  <%= f.submit %>
<% end %>