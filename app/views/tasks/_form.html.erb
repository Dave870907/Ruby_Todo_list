

<%= form_for(task) do |f| %>
  <%= f.label :title, "標題" %>
  <%= f.text_field :title %> <br />

  <%= f.label :start_time, "開始時間" %>
  <%= f.datetime_select :start_time %> <br />

  <%= f.label :end_time, "結束時間" %>
  <%= f.datetime_select :end_time %> <br />

  <%= f.label :status, "狀態" %>
  <%= f.text_area :status %> <br />

  <%= f.label :content, "內容" %>
  <%= f.text_area :content %> <br />

  <%= f.label :order, "優先順序" %>
  <%= f.text_area :order %> <br />

  <%= f.label :category, "分類標籤" %>
  <%= f.text_area :category %> <br />

  <%= f.label :user_id, "被誰建立（這裡之後要改）" %>
  <%= f.text_area :user_id %> <br />
  

  <%= f.submit %>
<% end %>